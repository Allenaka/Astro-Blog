---
import cfg from "blog.config";
const { link } = cfg.UserInfo;
---

<link rel="stylesheet" href="/fonts/social/iconfont.css" />
<div class="social">
  {
    link.map((val) => {
      return (
        <a href={val.link} target="_blank">
          <i class={val.class} />
        </a>
      );
    })
  }
</div>

<style lang="scss">
  .social {
    .iconfont {
      font-size: 1.2rem;
    }
  }
</style>
